{
  "filename": "`${__dirname}/builtins/filename.js`",
  "order": [
    "date",
    "title",
    "subtitle",
    "author",
    "tags"
  ],
  "template": "create-md-post.md",
  "attributes": {
    "title": {
      "type": "string",
      "message": "Enter post title",
      "default": "() => ''"
    },
    "subtitle": {
      "type": "string",
      "message": "Enter post subtitle",
      "default": "({ conf }) => { return conf.has('subtitle') ? conf.get('subtitle') : '' }",
      "callback": "({ attributes }) => { conf.set('subtitle', attributes.subtitle); }"
    },
    "author": {
      "type": "string",
      "message": "Enter post author",
      "default": "`${__dirname}/builtins/default/author.js`",
      "callback": "`${__dirname}/builtins/default/author.js`"
    },
    "date": {
      "type": "string",
      "message": "Enter created date",
      "default": "() => { return new Date().toLocaleDateString('ko-KR', { year: \"numeric\" , month: \"2-digit\", day:\"2-digit\"})}"
    },
    "tags": {
      "type": "list/comma",
      "message": "Enter tags",
      "default": "() => ''"
    }
  }
}